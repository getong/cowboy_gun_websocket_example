{minimum_otp_vsn, "21.1.2"}.

{erl_opts, [debug_info]}.
{deps, [
       cowboy,
       jiffy,
       brod,
       erlastic_search
]}.

{relx, [{release, { ws_server, "0.1.0" },
         [ws_server,
          sasl,
          cowboy,
          jiffy,
          brod]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
